---
const { title = "Eli Zaidman — Unity Game Developer", description = "Portfolio of Unity & C# games and tools by Eli Zaidman." } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <style>body{font-family:Inter,ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Cantarell,"Noto Sans",sans-serif}</style>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <header class="border-b border-neutral-800">
      <nav class="container flex h-16 items-center justify-between">
        <a href="/" class="font-extrabold tracking-tight">ELI ZAIDMAN</a>
        <div class="flex items-center gap-4 text-sm">
          <a class="hover:opacity-80" href="/projects">Projects</a>
          <a class="hover:opacity-80" href="/about">About</a>
          <a class="hover:opacity-80" href="/resume">Resume</a>
          <a class="btn" href="/contact">Contact</a>
        </div>
      </nav>
    </header>
    <main class="container py-10">
      <slot />
    </main>
    <footer class="border-t border-neutral-800 py-10">
      <div class="container text-sm opacity-70">
        © {new Date().getFullYear()} Eli Zaidman. Built with Astro + Tailwind.
      </div>
    </footer>
  </body>
</html>
